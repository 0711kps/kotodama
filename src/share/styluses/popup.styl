body
  width: 380px
  height: 70px
.kotodama-switch
  cursor: pointer
  width: 12vw
  height: auto
  position: fixed
  margin-left: 50%
  transform: translateX(-50%) scale(0)
  will-change: transform, display
  transition: transform 200ms
  user-select: none
  -moz-user-select: none
  -webkit-user-select: none
  user-drag: none
  -moz-user-drag: none
  -webkit-user-drag: none
  display: block
  &.activated
    transform: translateX(-50%) scale(1)
#kotodama-field
  width: 3em
  margin-left: 52%
  margin-top: 30px
  transform: translateX(-50%)
  text-align: center
  outline: none
  border-width: 0 0 2px 0
  border-color: hsl(0, 0%, 100%,)
  transition: all 500ms cubic-bezier(.02,.39,.37,.9)
  will-change: width margin-left border-color
  &::-webkit-input-placeholder
    text-align: center
    background-color: hsl(0, 0%, 90%)
  &::-moz-placeholder
    text-align: center
    background-color: hsl(0, 0%, 90%)
  &.activated
    width: 380px
    transform: translateX(0)
    margin-left: 0
    border-color: hsl(0, 0%, 10%)
#length-alert
  width: 380px
  display: block
  text-align: center
  will-change: color
  transition: color 200ms
  &.safe
    color: green
  &.warning
    color: orange
  &.alert
    color: red
