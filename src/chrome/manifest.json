{
    "name": "kotodama",
    "version": "0.1",
    "description": "share your current thoughts or feeling on any web page.",
    "background": {
        "scripts": ["js/background.js"],
        "persistent": false
    },
    "permissions": ["https://www.google.com.tw/"],
    "page_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/logo-16.png",
            "32": "images/logo-32.png",
            "48": "images/logo-48.png",
            "128": "images/logo-128.png"
        }
    },
    "manifest_version": 2
}
