{
    "name": "kotodama",
    "version": "0.2.3",
    "description": "share your current thoughts or feeling on any web page.",
    "background": {
        "scripts": ["js/third-js/firebase-app.js", "js/third-js/firebase-database.js", "js/firebase-config.js", "js/third-js/md5.min.js", "js/background.js"],
        "persistent": false
    },
    "permissions": ["https://kotodama-0711.firebaseio.com/", "tabs", "activeTab", "storage"],
    "browser_action": {
        "default_popup": "html/popup.html",
        "default_icon": {
            "16": "images/logo-16.png",
            "32": "images/logo-32.png",
            "48": "images/logo-48.png",
            "128": "images/logo-128.png"
        }
    },
  "web_accessible_resources": [
    "css/kotodama.css"
  ],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "css": ["css/kotodama.css"]
    }
  ],
  "manifest_version": 2,
  "content_security_policy": "script-src 'self'; object-src 'self'"
}
