{
    "name": "__MSG_extName__",
    "version": "0.9.2",
    "description": "__MSG_extDescription__",
    "background": {
        "scripts": ["js/third-js/firebase-app.js", "js/third-js/firebase-database.js", "js/firebase-config.js", "js/third-js/md5.min.js", "js/background.js"],
        "persistent": false
    },
    "permissions": ["https://kotodama-0711.firebaseio.com/", "tabs", "activeTab", "storage", "notifications"],
    "browser_action": {
