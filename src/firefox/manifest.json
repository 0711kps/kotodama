{
    "name": "kotodama",
    "version": "0.2.3",
    "description": "share your current thoughts or feeling on any web page.",
    "applications": {
        "gecko": {
            "id": "0711kps@gmail.com",
            "strict_min_version": "60"
        }
    },
    "background": {
        "scripts": ["js/third-js/firebase-app.js", "js/third-js/firebase-database.js", "js/firebase-config.js", "js/third-js/md5.min.js", "js/background.js"]
    },
    "permissions": ["https://kotodama-0711.firebaseio.com/", "webRequest", "tabs", "storage", "<all_urls>"],
    "icons": {
        "16": "images/logo-16.png",
        "32": "images/logo-32.png",
        "48": "images/logo-48.png",
        "128": "images/logo-128.png"
    },
    "browser_action": {
        "default_icon": "images/logo-32.png",
        "default_title": "kotodama",
        "default_popup": "html/popup.html"
    },
    "web_accessible_resources": [
        "css/kotodama.css"
    ],
    
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "css": ["css/kotodama.css"]
        }
    ],
    "options_ui": {
        "page": "html/options.html",
        "browser_style": true
    },
    "manifest_version": 2
}
